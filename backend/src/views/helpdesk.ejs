<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>СТНГ Service Desk – Helpdesk</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    >

    <style>
/* ================================
   Глобальная фиксация белого текста
================================= */
body, h1, h2, h3, h4, h5, h6, p, label, span, div, td, th {
    color: #e5e7eb !important;
}

/* Input + Select */
.form-control, 
.form-select {
    color: #e5e7eb !important;
}

/* Placeholder — тоже белый */
.form-control::placeholder,
.form-select::placeholder {
    color: #9ca3af !important;
    opacity: 1;
}

/* Опции select в выпадающем списке */
.form-select option {
    background: #020617 !important;
    color: #e5e7eb !important;
}

/* Таблицы */
.table td, 
.table th {
    color: #e5e7eb !important;
}

/* Подписи, мелкий текст */
.ticket-meta,
.ticket-id {
    color: #9ca3af !important;
}

/* Hover для select */
.form-select:focus {
    border-color: #4f46e5 !important;
    box-shadow: 0 0 0 1px #4f46e5 !important;
}

/* Поля ввода в admin/categories */
input, select, textarea {
    color: #e5e7eb !important;
    background: #020617 !important;
    border-color: #1f2937 !important;
}

    </style>
</head>
<body>
<div class="app-shell">
    <!-- HEADER -->
    <header class="app-header py-2 px-3">
        <div class="container-fluid">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center gap-3">
                    <div class="app-logo text-uppercase">СТНГ • Service Desk</div>
                    <span class="badge rounded-pill text-bg-dark border border-secondary">Beta</span>
                    <a href="/admin/dashboard" class="btn btn-sm btn-outline-light ms-3">Admin Dashboard</a>
                </div>
                <div class="d-flex align-items-center gap-3">
                    <div class="text-end">
                        <div style="font-size:0.9rem;"><%= username %></div>
                        <div style="font-size:0.75rem;color:#9ca3af;">Вход через Active Directory</div>
                    </div>
                    <button class="btn btn-outline-light btn-sm">Выйти</button>
                </div>
            </div>
        </div>
    </header>

    <!-- MAIN -->
    <main class="flex-grow-1 py-3">
        <div class="container-fluid">
            <div class="row g-3">
                <!-- SIDEBAR -->
                <div class="col-lg-3 sidebar">
                    <div class="sidebar-card p-3 mb-3">
                        <h6 class="mb-3">Фильтры</h6>
                        <div class="mb-3">
                            <label class="form-label">Статус</label>
                            <select class="form-select form-select-sm">
                                <option value="">Все</option>
                                <option value="new">Новый</option>
                                <option value="in_work">В работе</option>
                                <option value="done">Закрыт</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Приоритет</label>
                            <select class="form-select form-select-sm">
                                <option value="">Все</option>
                                <option value="low">Низкий</option>
                                <option value="medium">Средний</option>
                                <option value="high">Высокий</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Поиск</label>
                            <input type="text" class="form-control form-control-sm" placeholder="Текст, ID, автор...">
                        </div>
                        <button class="btn btn-primary w-100 btn-sm">Применить</button>
                    </div>

                    <div class="sidebar-card p-3">
                        <h6 class="mb-3">Быстрая статистика</h6>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Мои открытые</span><span class="badge text-bg-secondary">5</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Все новые</span><span class="badge text-bg-secondary">12</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>В работе</span><span class="badge text-bg-secondary">8</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Просроченные</span><span class="badge text-bg-danger">3</span>
                        </div>
                    </div>
                </div>

                <!-- MAIN AREA -->
                <div class="col-lg-9">
                    <div class="main-card p-3">
                        <!-- TABS -->
                        <ul class="nav nav-pills mb-3" id="ticketTabs">
                            <li class="nav-item">
                                <button class="nav-link active" data-target="#tab-my">Мои тикеты</button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link" data-target="#tab-all">Все тикеты</button>
                            </li>
                            <li class="nav-item ms-auto">
                                <button class="nav-link" data-target="#tab-create">+ Создать тикет</button>
                            </li>
                        </ul>

                        <!-- TAB: Мои -->
                        <div id="tab-my" class="tab-pane-custom">
                            <h5 class="mb-3">Мои тикеты</h5>
                            <div class="table-responsive">
                                <table class="table table-sm align-middle">
                                    <thead>
                                    <tr>
                                        <th>ID</th><th>Тема</th><th>Приоритет</th><th>Статус</th><th>Создан</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <% if (tickets && tickets.length > 0) { %>
                                      <% tickets.forEach(t => { if (t.author === username) { %>
                                        <tr>
                                          <td><div class="ticket-id">#TCK-<%= t.id %></div></td>
                                          <td>
                                            <div class="ticket-title"><%= t.title %></div>
                                            <div class="ticket-meta">
                                              Категория: <%= t.category_name || '—' %>
                                            </div>
                                          </td>
                                          <td>
                                            <% if (t.priority === 'high') { %>
                                              <span class="badge badge-priority-high">Высокий</span>
                                            <% } else if (t.priority === 'low') { %>
                                              <span class="badge badge-priority-low">Низкий</span>
                                            <% } else { %>
                                              <span class="badge badge-priority-medium">Средний</span>
                                            <% } %>
                                          </td>
                                          <td>
                                            <% if (t.status === 'new') { %>
                                              <span class="status-pill status-new">Новый</span>
                                            <% } else if (t.status === 'in_work') { %>
                                              <span class="status-pill status-in-progress">В работе</span>
                                            <% } else if (t.status === 'done') { %>
                                              <span class="status-pill status-done">Решён</span>
                                            <% } else { %>
                                              <span class="status-pill status-in-progress">Закрыт</span>
                                            <% } %>
                                          </td>
                                          <td>
                                            <div class="ticket-meta">
                                              <%= t.created_at.toISOString().slice(0,16).replace('T',' ') %>
                                            </div>
                                          </td>
                                        </tr>
                                      <% } }); %>
                                    <% } else { %>
                                      <tr>
                                        <td colspan="5" class="text-center text-secondary">Тикетов пока нет</td>
                                      </tr>
                                    <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- TAB: Все -->
                        <div id="tab-all" class="tab-pane-custom d-none">
                            <h5 class="mb-3">Все тикеты</h5>
                            <div class="table-responsive">
                                <table class="table table-sm align-middle">
                                    <thead>
                                    <tr>
                                        <th>ID</th><th>Тема</th><th>Автор</th><th>Приоритет</th><th>Статус</th><th>Создан</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <% if (tickets && tickets.length > 0) { %>
                                      <% tickets.forEach(t => { %>
                                        <tr>
                                          <td><div class="ticket-id">#TCK-<%= t.id %></div></td>
                                          <td>
                                            <div class="ticket-title"><%= t.title %></div>
                                            <div class="ticket-meta">
                                              Категория: <%= t.category_name || '—' %>
                                            </div>
                                          </td>
                                          <td><div class="ticket-meta"><%= t.author %></div></td>
                                          <td>
                                            <% if (t.priority === 'high') { %>
                                              <span class="badge badge-priority-high">Высокий</span>
                                            <% } else if (t.priority === 'low') { %>
                                              <span class="badge badge-priority-low">Низкий</span>
                                            <% } else { %>
                                              <span class="badge badge-priority-medium">Средний</span>
                                            <% } %>
                                          </td>
                                          <td>
                                            <% if (t.status === 'new') { %>
                                              <span class="status-pill status-new">Новый</span>
                                            <% } else if (t.status === 'in_work') { %>
                                              <span class="status-pill status-in-progress">В работе</span>
                                            <% } else if (t.status === 'done') { %>
                                              <span class="status-pill status-done">Решён</span>
                                            <% } else { %>
                                              <span class="status-pill status-in-progress">Закрыт</span>
                                            <% } %>
                                          </td>
                                          <td>
                                            <div class="ticket-meta">
                                              <%= t.created_at.toISOString().slice(0,16).replace('T',' ') %>
                                            </div>
                                          </td>
                                        </tr>
                                      <% }); %>
                                    <% } else { %>
                                      <tr>
                                        <td colspan="6" class="text-center text-secondary">Тикетов пока нет</td>
                                      </tr>
                                    <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- TAB: Создать -->
                        <div id="tab-create" class="tab-pane-custom d-none">
                            <h5 class="mb-3">Создать тикет</h5>
                            <form method="post" action="/tickets">
                                <div class="mb-3">
                                    <label class="form-label">Тема</label>
                                    <input type="text" class="form-control" name="title"
                                           placeholder="Например: Не работает принтер в кабинете 305" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Приоритет</label>
                                    <select class="form-select" name="priority">
                                        <option value="medium">Средний</option>
                                        <option value="low">Низкий</option>
                                        <option value="high">Высокий</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Описание</label>
                                    <textarea class="form-control" rows="4" name="description"
                                              placeholder="Опиши проблему: когда началось, на каком ПК, что уже пробовал делать."></textarea>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Категория</label>
                                    <select class="form-select" name="category_id">
                                        <option value="">Выбрать...</option>
                                        <% if (categories && categories.length > 0) { %>
                                          <% categories.forEach(c => { %>
                                            <option value="<%= c.id %>"><%= c.name %></option>
                                          <% }); %>
                                        <% } %>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary">Отправить тикет</button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

<script>
    const tabButtons = document.querySelectorAll('#ticketTabs .nav-link');
    const tabPanes = document.querySelectorAll('.tab-pane-custom');

    tabButtons.forEach(btn => {
        btn.addEventListener('click', () => {
            const target = btn.getAttribute('data-target');
            tabButtons.forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
            tabPanes.forEach(pane => {
                if ('#' + pane.id === target) pane.classList.remove('d-none');
                else pane.classList.add('d-none');
            });
        });
    });
</script>
</body>
</html>
